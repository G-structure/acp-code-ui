{
  "name": "claude-code-web-ui",
  "version": "1.0.0",
  "description": "Web UI wrapper for Claude Code TUI application",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm --workspace=backend run dev",
    "dev:frontend": "npm --workspace=frontend run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --workspace=backend run build",
    "build:frontend": "npm --workspace=frontend run build",
    "start": "npm --workspace=backend run start"
  },
  "devDependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
