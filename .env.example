# API Configuration
ANTHROPIC_API_KEY=your-api-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Security - Comma-separated lists
BLOCKED_TOOLS=
BLOCKED_PATHS=/etc,/sys,/proc

# Claude Code Configuration
CLAUDE_CODE_SESSION_TIMEOUT=3600000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# File System Restrictions
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.js,.ts,.jsx,.tsx,.json,.md,.txt,.html,.css,.py,.java,.go,.rs,.cpp,.c

# Frontend Configuration (for production builds)
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001